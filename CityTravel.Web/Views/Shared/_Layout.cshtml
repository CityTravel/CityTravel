@using SquishIt.Framework
@using SquishIt.Mvc
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @(SquishIt.Framework.Bundle.Css()
        .Add("~/css/bootstrap/bootstrap.min.css")
        .Add("~/css/bootstrap/bootstrap-responsive.min.css")
        .Add("~/css/my/Base.css")
        .Add("~/css/my/AddRoute.css")
        .Add("~/css/my/Controls.css")
        .Add("~/css/my/Map.css")
        .Add("~/css/my/Print.css")
        .Add("~/css/my/loadingBar.css")
        .Add("~/css/jquery.toastmessage/jquery.toastmessage.css")
        .MvcRender("~/css/css_#.css")
        )
    @RenderSection("Css", false)
</head>
<body>
    <!--[if IE]><script type="text/javascript" src=""~/js/json2/json2.js""></script><![endif]-->
    <div class="navbar navbar-fixed-top" id="mainNavigation">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span
                    class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </a><a class="brand" href="@Url.Action("Index", "MakeRoute")">@Resources.ProductName
                </a>
                <div class="nav-collapse">
                    <ul class="nav">
                        <li class="active"><a href="@Url.Action("Index", "MakeRoute")"><i class="icon-move icon-white">
                        </i>
                            @Resources.FindRoute
                        </a></li>
                    </ul>
                    <ul class="nav pull-right">
                        <li><a href="#"><i class="icon-question-sign icon-white"></i>
                            @Resources.Help
                        </a></li>
                        <li id="nav-about-us"><a href="@Url.Action("AboutUs", "MakeRoute")" ><i class="icon-user icon-white">
                        </i>
                            @Resources.AboutUs
                        </a></li>
                        <li><a class="feedback-open-button" style="cursor: pointer"><i class="icon-pencil icon-white">
                        </i>
                            @Resources.Feedback
                        </a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid main-container" id="mainContainer">
        <div class="body-wrapper">
            @RenderBody()
        </div>
        <div class="feedbackform">
            @Html.Action("FeedbackForm", "Feedback")
        </div>
    </div>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" type="text/javascript"></script>
    <script type="text/javascript">        !window.jQuery && document.write(unescape('%3Cscript src="/js/jQuery/core/jquery-1.7.2.min.js"%3E%3C/script%3E'))</script>
    <script type="text/javascript">
    var localizedMessages = {};
    localizedMessages["EnterLocation"] = "@Html.Raw(Resources.EnterLocation)";
    localizedMessages["Sit"] = "@Resources.Sit";
    localizedMessages["OnStop"] = "@Resources.OnStop";
    localizedMessages["RideUntil"] = "@Resources.RideUntil";
    localizedMessages["AdressError"] = "@Resources.AdressError"
    </script>
    @(Bundle.JavaScript()
            .Add("~/js/bootstrap/core/bootstrap.min.js")
            .Add("~/js/Bootstrap/plugins/bootstrap-typeahead.js")
            .Add("~/js/Bootstrap/plugins/bootstrap-button.js")
            .Add("~/js/Bootstrap/plugins/bootstrap-tooltip.js")
            .Add("~/js/jQuery/plugins/jquery.validate.min.js")
            .Add("~/js/jQuery/plugins/jquery.validate.unobtrusive.min.js")
            .Add("~/js/jQuery/plugins/jquery.unobtrusive-ajax.min.js")
            .Add("~/js/jQuery/plugins/jquery.toastmessage.js")
            .Add("~/js/jQuery/plugins/jquery.cookie.js")
            .Add("~/js/knockout/knockout-2.1.0.js")
            .Add("~/js/my/ToastMessage.js")
            .Add("~/js/my/Feedback.js")
            .MvcRender("~/js/general_#.js")
    )
    @RenderSection("scripts", false)
</body>
</html>
