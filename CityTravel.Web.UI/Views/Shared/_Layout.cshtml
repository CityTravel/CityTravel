@using SquishIt.Framework
@using SquishIt.Mvc
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @(Bundle.Css()
        .Add("~/Content/Bootstrap.min.css")
        .Add("~/Content/Bootstrap-responsive.min.css")
        .Add("~/Content/Base.css")
        .Add("~/Content/AddRoute.css")
        .Add("~/Content/Controls.css")
        .Add("~/Content/Map.css")
        .Add("~/Content/Print.css")
        .Add("~/Content/loadingBar.css")
        .Add("~/Content/jquery.toastmessage.css")
        .MvcRender("~/content/css_#.css")
        )
    @RenderSection("Css", false)
</head>
<body>
    <!--[if IE]><script type="text/javascript" src=""~/Scripts/json2.js""></script><![endif]-->
    <div class="navbar navbar-fixed-top" id="mainNavigation">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span
                    class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </a><a class="brand" href="@Url.Action("Index", "MakeRoute")">@Resources.ProductName</a>
                <div class="nav-collapse">
                    <ul class="nav">
                        <li class="active"><a href="@Url.Action("Index", "MakeRoute")"><i class="icon-move icon-white">
                        </i>
                            @Resources.FindRoute
                        </a></li>
                    </ul>
                    <ul class="nav pull-right">
                        <li><a href="#"><i class="icon-question-sign icon-white"></i>
                            @Resources.Help
                        </a></li>
                        <li id="nav-about-us"><a href="@Url.Action("AboutUs", "MakeRoute")" ><i class="icon-user icon-white">
                        </i>
                            @Resources.AboutUs
                        </a></li>
                        <li><a class="feedback-open-button" style="cursor: pointer"><i class="icon-pencil icon-white">
                        </i>
                            @Resources.Feedback
                        </a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid main-container" id="mainContainer">
        <div class="body-wrapper">
            @RenderBody()
        </div>
        <div class="feedbackform">
            @Html.Action("FeedbackForm", "Feedback")
        </div>
    </div>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" type="text/javascript"></script>
    <script type="text/javascript">        !window.jQuery && document.write(unescape('%3Cscript src="Scripts/jQuery/jquery-1.7.2.min.js"%3E%3C/script%3E'))</script>
    <script type="text/javascript">
        var localizedMessages = {};
        localizedMessages["EnterLocation"] = "@Resources.EnterLocation";
        localizedMessages["Sit"] = "@Resources.Sit";
        localizedMessages["OnStop"] = "@Resources.OnStop";
        localizedMessages["RideUntil"] = "@Resources.RideUntil";
        localizedMessages["AdressError"] = "@Resources.AdressError"
    </script>
    @(Bundle.JavaScript()
            .Add("~/Scripts/jQuery/jquery.validate.min.js")
            .Add("~/Scripts/jQuery/jquery.validate.unobtrusive.min.js")
            .Add("~/Scripts/jQuery/jquery.unobtrusive-ajax.min.js")
            .Add("~/Scripts/jQuery/jquery.toastmessage.js")
            .Add("~/Scripts/Bootstrap/bootstrap.min.js")
            .Add("~/Scripts/Bootstrap/bootstrap-typeahead.js")
            .Add("~/Scripts/Bootstrap/bootstrap-button.js")
            .Add("~/Scripts/Bootstrap/bootstrap-tooltip.js")
            .Add("~/Scripts/JQuery/jquery.cookie.js")
            .Add("~/Scripts/knockout/knockout.js")
            .Add("~/Scripts/My/ToastMessage.js")
            .Add("~/Scripts/My/Feedback.js")
            .MvcRender("~/Scripts/js_#.css")
    )

    @RenderSection("JavaScript", false)
    <!--[if gte IE 6 ]>
            <script>
                var IEBlockerCookie = $.cookie('IEBlockerCookie');
                if (IEBlockerCookie!='true' || IEBlockerCookie==null ) {
                    window.location.replace='@Url.Action("IEBlocker", "BrowserBlocker")';
                }
                 
            </script> 
    <![endif]-->
</body>
</html>
