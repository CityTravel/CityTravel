@using SquishIt.Framework
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title</title>

        @{
            SquishIt.Css.Add("~/Content/Base.css");
            SquishIt.Css.Add("~/Content/AddRoute.css");
            SquishIt.Css.Add("~/Content/Controls.css");
            SquishIt.Css.Add("~/Content/Map.css");
            SquishIt.Css.Add("~/Content/Print.css");
            SquishIt.Css.Add("~/Content/loadingBar.css");
            SquishIt.Css.Add("~/Content/Bootstrap.min.css");
            SquishIt.Css.Add("~/Content/Bootstrap-responsive.min.css");
         }
         @RenderSection("Css", false)
         @SquishIt.Css.Render("~/Content/combined_#.css")
    </head>
    <body>
        <!--[if IE]><script type="text/javascript" src=""~/Scripts/json2.js""></script><![endif]-->
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span></a>
                    <a class="brand" href="@Url.Action("Index", "MakeRoute")">@Resources.ProductName</a>
                    <div class="nav-collapse">
                        <ul class="nav">
                            <li class="active">
                                <a href="@Url.Action("Index", "MakeRoute")">
                                    <i class="icon-move icon-white"></i>
                                    @Resources.FindRoute
                                </a>
                            </li>
                        </ul>
                        <ul class="nav pull-right">
                            <li>
                                <a href="#">
                                    <i class="icon-question-sign icon-white"></i> 
                                    @Resources.Help
                                 </a>
                            </li>
                            <li id="nav-about-us">
                                <a href="@Url.Action("AboutUs", "MakeRoute")" >
                                    <i class="icon-user icon-white"></i> 
                                    @Resources.AboutUs
                                 </a>
                            </li>
                            <li>
                                <a class="feedback-open-button" href="#feedback">
                                    <i class="icon-pencil icon-white"></i> 
                                    @Resources.Feedback
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid main-container">
            <div class="body-wrapper">        
                @RenderBody()
            </div>
            <div class="feedbackform">
                @Html.Action("FeedbackForm", "Feedback")
            </div>
        </div>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
        <script type="text/javascript">!window.jQuery && document.write(unescape('%3Cscript src="Scripts/jquery-1.7.1.min.js"%3E%3C/script%3E'))</script>

        <script type="text/javascript">
            var localizedMessages = {};
            localizedMessages["EnterLocation"] = "@Resources.EnterLocation";
            localizedMessages["Sit"] = "@Resources.Sit";
            localizedMessages["OnStop"] = "@Resources.OnStop";
            localizedMessages["RideUntil"] = "@Resources.RideUntil";
            localizedMessages["AdressError"] = "@Resources.AdressError"
        </script>

        @RenderSection("JavaScript", false)
        @{
            SquishIt.JavaScript.Add("~/Scripts/My/Feedback.js");
            SquishIt.JavaScript.Add("~/Scripts/jQuery/jquery.unobtrusive-ajax.min.js");
            SquishIt.JavaScript.Add("~/Scripts/jQuery/jquery.validate.unobtrusive.min.js");
            SquishIt.JavaScript.Add("~/Scripts/jQuery/jquery.validate.min.js");
            SquishIt.JavaScript.Add("~/Scripts/Bootstrap/bootstrap-typeahead.js");
            SquishIt.JavaScript.Add("~/Scripts/Bootstrap/bootstrap-button.js");
            SquishIt.JavaScript.Add("~/Scripts/Bootstrap/bootstrap-tooltip.js");
            SquishIt.JavaScript.Add("~/Scripts/Bootstrap/bootstrap.min.js");
        }
      
        @SquishIt.JavaScript.Render("~/scripts/combined_#.js")
    
    </body>
</html>